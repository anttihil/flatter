extends layout 

block content
	article(
		class="divide-y divide-brown md:h-auto h-full text-light font-sans items-start bg-dark flex flex-col space-y-2  border-b border-brown"
		)
		header(class='text-light font-fraktur text-xl self-center') Admin Dashboard
		section#dashboardNavigation(class="self-center flex justify-between text-xs space-x-3 p-2")
			span Navigation:
			a(href="#users" class="hover:text-light text-brown") Users
			a(href="#posts" class="hover:text-light text-brown") Posts
			a(href="#comments" class="hover:text-light text-brown") Comments
		section.p-4.w-full
			header#users.font-fraktur.mb-4 Users    
			if users
				for u in users 
					article(
						class="flex flex-wrap items-center space-x-2 mb-2 md:grid md:grid-cols-5 md:gap-2 md:justify-items-start font-sans text-sm"
						)
							span= u.username
							form(action="/user/" + u.id + "/ban" method="post" class="") 
								button(
									type="submit" 
									class="p-1 bg-gray text-xs text-dark rounded hover:bg-light hover:text-gray ")= u.is_permabanned ? "UnPermaBan" : "PermaBan"	
							form(
								action="/user/" + u.id + "/tempban" 
								method="post" 
								class="p-1")
								input(
									type="date"
									name="date"
									value=u.is_banned_until ? u.is_banned_until : "" 
									class='mr-2 focus:outline-none focus:ring focus:ring-brown bg-light text-dark'
									)  
								button(
									type="submit" 
									class="bg-gray text-xs text-dark px-2 rounded hover:bg-light hover:text-gray"
									) Set TempBan
							-let dateConfig = {dateStyle:"short", timeStyle:"short" }
							time#latest-visit(class="text-xs")= u.latest_visit ? "Visited " + u.latest_visit.toLocaleString("en-US", dateConfig) : "Never visited"
							time#created(class="text-xs justify-self-end")= u.created_at ? "Created " + u.created_at.toLocaleString("en-US", dateConfig) : "No creation date"
			a(href="#dashboardNavigation" class="hover:text-light text-brown text-xs") Back to the top	
		section.p-4.w-full
			header#posts.font-fraktur.mb-4 Posts
			if posts
				for post in posts 
					article.flex.font-sans.text-sm.space-x-1.mb-1
						a.mr-auto(href="/board/post/" + post.id )= post.title				
						a.text-xs(href=post.image_url)
						span.text-xs=post.username 
						-let dateConfig = {dateStyle:"short", timeStyle:"short" }
						time(class="flex-none text-xs")= post.last_changed_at ? "edited " + post.last_changed_at.toLocaleString("en-US", dateConfig) : "created " + post.created_at.toLocaleString("en-US", dateConfig)
			a(href="#dashboardNavigation" class="hover:text-light text-brown text-xs") Back to the top
		section.p-4.w-full
			header#comments.font-fraktur.mb-4 Comments    
			if comments
				for comment in comments 
					article.flex.font-sans.text-sm.space-x-1.mb-1
							a.mr-auto(href="/board/post/" + comment.post_id + "/#comment" + comment.id class="")= comment.text 
							span.text-xs=comment.username
							-let dateConfig = {dateStyle:"short", timeStyle:"short" }
							time(class="flex-none text-xs")= comment.last_changed_at ? "edited " + comment.last_changed_at.toLocaleString("en-US", dateConfig) : "created " + comment.created_at.toLocaleString("en-US", dateConfig)
			a(href="#dashboardNavigation" class="hover:text-light text-brown text-xs") Back to the top
		