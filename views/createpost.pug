extends layout 

block content 
		+formCard 
			div.flex.flex-col.h-8.items-center.text-xl.font-fraktur.text-light
				header Create a Post  
			form(action="" method="POST" class='focus:outline-none focus:ring focus:ring-brown' ).flex.flex-col.space-y-2.font-serif.w-full.text-sm.text-light
				.pt-2  
					label(for="selectBoard") Select Board:
					select(
						name="board" 
						id="selectBoard" 
						required 
						class='shadow w-full bg-light text-dark p-1'
					)
						for board in boards 
							option(value=board).text-dark=board
				div 
					label(for="title-input") Title:
					input(
						type="text" 
						name="title" 
						id="title-input" 
						required 
						placeholder=" Title text"
						maxlength="150" 
						class='focus:outline-none focus:ring focus:ring-brown w-full bg-light text-dark')
					span.text-xs Max length 150 characters.
				div 
					label(for="image-input") Image URL:
					input(type="url" name="image" id="image-input" placeholder=" https://imgur.com/someimage" class='focus:outline-none focus:ring focus:ring-brown w-full bg-light text-dark')
				div 
					label(for="text-input") Text:  
					textarea(
					id="text-input" 
					name="text" 
					cols="30" 
					rows="10" 
					placeholder=" Your post content here." 
					maxlength="60000"
					spellcheck="true"
					class='focus:outline-none focus:ring focus:ring-brown  bg-light text-dark shadow w-full'
					)
				+bigButton("submit", "Submit")