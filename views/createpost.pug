extends layout 

block content 
    +centerContainer
        div(class='w-3/4').bg-dark.p-4.flex.flex-col.items-center.divide-y-2.space-y-2.divide-brown 
            div.flex.flex-col.h-8.items-center.text-xl.font-fraktur.text-light
                header Create a Post  
            form(action="" method="POST" class='focus:outline-none focus:ring focus:ring-brown' ).flex.flex-col.space-y-2.font-serif.w-full.text-sm.text-light
                .pt-2  
                    label(for="boardInput") Select Board:
                    select(name="board" id="boardInput" required ).shadow.w-full.bg-light.text-dark.p-1
                        for board in boards 
                            option(value=board.board_name).text-dark=board.board_name
                div 
                    label(for="titleInput") Title:
                    input(type="text" name="title" id="titleInput" required placeholder=" Title text" class='focus:outline-none focus:ring focus:ring-brown').shadow.w-full.bg-light.text-dark
                div 
                    label(for="imageInput") Image URL:
                    input(type="url" name="image" id="imageInput" placeholder=" https://imgur.com/someimage" class='focus:outline-none focus:ring focus:ring-brown').shadow.w-full.bg-light.text-dark
                div 
                    label(for="textInput") Text:  
                    textarea.bg-light.text-dark.shadow.w-full(id="textInput" name="text" cols="30" rows="10" placeholder=" Your post content here." class='focus:outline-none focus:ring focus:ring-brown') 
                input(type="submit" value="Submit").self-end.p-1.shadow.border-2.border-main.border-opacity-50.text-lg.font-fraktur.bg-light.text-dark(class="hover:bg-gray")