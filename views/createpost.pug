extends layout 

block content 
	+cardContainer
		+formCard 
			div.flex.flex-col.h-8.items-center.text-xl.font-fraktur.text-light
				header Create a Post  
			form(action="" method="POST" class='focus:outline-none focus:ring focus:ring-brown' ).flex.flex-col.space-y-2.font-serif.w-full.text-sm.text-light
				.pt-2  
					label(for="board_input") Select Board:
					select(
						name="board" 
						id="board_input" 
						required 
						class='shadow w-full bg-light text-dark p-1'
					)
						for board in boards 
							option(value=board).text-dark=board
				div 
					label(for="title_input") Title:
					input(type="text" name="title" id="title_input" required placeholder=" Title text" class='focus:outline-none focus:ring focus:ring-brown').shadow.w-full.bg-light.text-dark
				div 
					label(for="image_input") Image URL:
					input(type="url" name="image" id="image_input" placeholder=" https://imgur.com/someimage" class='focus:outline-none focus:ring focus:ring-brown').shadow.w-full.bg-light.text-dark
				div 
					label(for="text_input") Text:  
					textarea(
					id="text_input" 
					name="text" 
					cols="30" 
					rows="10" 
					placeholder=" Your post content here." 
					class='focus:outline-none focus:ring focus:ring-brown  bg-light text-dark shadow w-full'
					)
				+bigButton("submit", "Submit")