extends layout 

block content
    div(class="w-1/2").flex.flex-col.mt-3.space-y-3.items-stretch
        for post in posts 
            article.p-2.bg-dark.text-light.antialiased.flex.flex-col.divide-y-2.space-y-2.divide-brown
                header.px-2.font-sans.antialiased= post.post_title
                div
                    div.px-2.font-serif.text-sm= post.post_text 
                    footer.px-2.py-1.flex.flex-row.font-sans.text-xs.justify-end
                        -   let dateConfig = {year: 'numeric', month: 'short', day: 'numeric'}
                        -   let date = post.post_created_at.toLocaleDateString("en-US", dateConfig)
                        div= "Posted by " + post.user_nickname + ' on ' + date