extends layout 

block content
		if posts
			for post in posts 
				+card
					section(
						class="p-2 font-alegsans font-normal"
						)
						a(href="/image/" + post.images[0] class="float-left inline mr-4 mb-2 hover:outline hover:outline-brown")
							img(src=process.env.IMAGE_STORAGE_THUMBNAIL_URL + post.images[0] + ".webp" class="w-24 max-w-screen-sm" crossorigin)
						header(class="mb-2")
							a(
								href="/board/post/" + post.id
								class="text-lg font-aleg font-semibold hover:text-gray whitespace-normal"
								)= post.title
							if post.is_locked
								span(class="px-2 bg-gray text-xs text-dark rounded hover:bg-light hover:text-gray") Locked
						a(href="/board/post/" + post.id class=" hover:text-gray whitespace-pre-line")= post.text + "..."
							div(class="inline-block ml-2 text-gray hover:text-red-800 text-sm") Read More
					footer(
						class="px-2 flex flex-row font-alegsans font-normal text-sm justify-end space-x-2"
						)
						-let dateConfig = {dateStyle:"medium", timeStyle:"short" } 
						span=post.username
						time=post.created_at.toLocaleString("en-US", dateConfig) 