extends layout 

block content 
    +centerContainer
        article.bg-dark.p-4.flex.flex-col.items-center.w-96.divide-y-2.space-y-2.divide-brown 
            header.flex.flex-col.items-center.text-light
                .font-fraktur.text-xl Log In
                if hasMessages
                    each message in messages 
                        article.font-serif= message
            form(action="" method="POST" class='focus:outline-none focus:ring focus:ring-brown').flex.flex-col.space-y-2.mt-2.font-serif.w-full.text-sm
                .pt-2 
                    label(for="email").text-light Email
                    input(type="text" name="email" class='focus:outline-none focus:ring focus:ring-brown' required).shadow.w-full.bg-light.text-dark
                div 
                    label(for="password").text-light Password
                    input(type="password" name="password" class='focus:outline-none focus:ring focus:ring-brown' required).shadow.w-full.bg-light.text-dark 
                input(type="submit" value="Submit" class='hover:bg-gray').self-end.p-1.shadow.border-2.border-dark.border-opacity-50.text-lg.font-fraktur.bg-light.text-dark
                    