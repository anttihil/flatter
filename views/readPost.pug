extends layout 
block content
    +centerContainer
        article.flex.flex-col.bg-dark.text-light.space-y-2.divide-y-2.divide-brown 
            header.px-2.py-1.font-sans= post.post_title
            div.px-2.py-1.font-serif.text-sm= post.post_text 
            footer.px-2.py-1.flex.flex-row.font-sans.text-xs.justify-end
                button Edit 
                button Delete
                -   let dateConfig = {year: 'numeric', month: 'short', day: 'numeric'}
                -   let date = post.post_created_at.toLocaleDateString("en-US", dateConfig)
                time= "Posted by " + post.user_nickname + ' on ' + date
        for comment in comments 
                article.flex.flex-col.bg-dark.text-light.space-y-2
                    div.px-2.font-serif.text-sm= comment.comment_text 
                    footer.px-2.flex.flex-row.font-sans.text-xs.justify-end
                        -   let dateConfig = {year: 'numeric', month: 'short', day: 'numeric'}
                        -   let date = comment.comment_created_at.toLocaleDateString("en-US", dateConfig)
                        time= "Posted by " + comment.user_nickname + ' on ' + date    
        