extends layout 

block content 
	.bg-dark.text-light.p-4.flex.flex-col.items-center.divide-y.space-y-2.divide-brown.border-2.border-brown 
		div.flex.flex-col.items-center.text-xl.font-fraktur
			header Register  
		form(action="" method="POST").flex.flex-col.space-y-2.mt-2.font-serif.w-full.text-sm
			.pt-2
				label(for="email") Email
				input(
					type="email" 
					id="email" 
					name="email" 
					required 
					class="focus:outline-none focus:ring focus:ring-brown w-full bg-light text-dark")
			div 
				label(for="username") Username
				input(
					type="text" 
					id="username" 
					name="username" 
					required
					pattern="[0-9a-zA-Z]{1,16}" 
					class="focus:outline-none focus:ring focus:ring-brown w-full bg-light text-dark")
			div 
				label(for="password") Password
				input(
					type="password" 
					id="password" 
					name="password" 
					autocomplete="new-password" 
					required 
					class="focus:outline-none focus:ring focus:ring-brown w-full bg-light text-dark"
					pattern="[0-9a-zA-Z]{10,24}"
					)
			input(
				type="submit" 
				value="Submit" 
				class="hover:bg-gray self-end p-1 border-2 border-main border-opacity-70 text-lg font-fraktur bg-light text-dark")