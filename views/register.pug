extends layout 

block content 
    div.flex.flex-col.items-center.justify-center.bg-gray-900.h-full
        .bg-gray-500.p-4.flex.flex-col.items-center.w-96.divide-y-2.space-y-2.divide-gray-700 
            div.flex.flex-col.h-8.items-center.text-xl.font-fraktur
                header Register  
            form(action="" method="POST").flex.flex-col.space-y-2.mt-2.font-serif.w-full.text-sm
                div 
                    label(for="email") Email
                    input(type="text" id="email" required).shadow.w-full
                div 
                    label(for="user_name") User name
                    input(type="text" id="user_name" required).shadow.w-full
                div 
                    label(for="password") Password
                    input(type="password" id="password" required).shadow.w-full 
                input(type="submit" value="Submit").self-end.p-2.shadow.border-2.border-gray-700.border-opacity-50.text-lg.font-fraktur