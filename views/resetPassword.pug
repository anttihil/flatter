extends layout 

block content 
	.bg-dark.text-light.p-4.flex.flex-col.items-center.divide-y.space-y-2.divide-brown.border-2.border-brown 
		header.text-xl.font-fraktur Reset your password
		form(action="" method="POST").flex.flex-col.space-y-2.mt-2.font-serif.w-full.text-sm
			.pt-2 
				label(for="newPassword") New Password
				input(
					type="password" 
					id="newPassword" 
					name="newPassword" 
					autocomplete="new-password" 
					required 
					class="focus:outline-none focus:ring focus:ring-brown w-full bg-light text-dark"
					pattern="[0-9a-zA-Z]{12,100}"
					)
				span.text-xs 12 characters minimum, 100 maximum. Password can contain both upper and lower case letters, and numbers.	
				if validationErrors && validationErrors.newPassword
					span(class="text-red-800 text-xs")=validationErrors.newPassword.msg
			div 
				label(for="confirmPassword") Confirm Password
				input(
					type="password" 
					id="confirmPassword" 
					name="confirmPassword" 
					autocomplete="new-password" 
					required 
					class="focus:outline-none focus:ring focus:ring-brown w-full bg-light text-dark"
					pattern="[0-9a-zA-Z]{12,100}"
					)
				if validationErrors && validationErrors.confirmPassword
					span(class="text-red-800 text-xs")=validationErrors.confirmPassword.msg
			input(
				type="submit" 
				value="Submit" 
				class="hover:bg-gray self-end p-1 border-2 border-main border-opacity-70 text-lg font-fraktur bg-light text-dark")